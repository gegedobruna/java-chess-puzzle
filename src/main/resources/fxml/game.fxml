<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="650.0" prefWidth="500.0" stylesheets="@/game.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chesspuzzle.game.GameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label alignment="CENTER" prefHeight="80.0" prefWidth="460.0" text="Chess Puzzle" textAlignment="CENTER">
        <font>
            <Font name="Book Antiqua Bold" size="41.0" />
        </font>
    </Label>
    <HBox alignment="TOP_CENTER" prefHeight="59.0" prefWidth="460.0" spacing="10.0">
        <Label alignment="TOP_RIGHT" prefHeight="18.0" prefWidth="127.0" text="Player name:" textAlignment="RIGHT">
            <font>
                <Font name="Book Antiqua" size="14.0" />
            </font>
        </Label>
        <Label fx:id="nameLabel" alignment="TOP_LEFT" contentDisplay="TOP" prefHeight="18.0" prefWidth="88.0">
            <font>
                <Font name="Book Antiqua" size="14.0" />
            </font>
        </Label>
    </HBox>
    <HBox alignment="CENTER" prefHeight="518.0" prefWidth="448.0" spacing="10.0">
        <GridPane fx:id="grid" alignment="CENTER" gridLinesVisible="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="400.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </VBox.margin>
        </GridPane>
    </HBox>
    <HBox alignment="BOTTOM_CENTER" prefHeight="72.0" prefWidth="460.0" spacing="10.0">
        <Label text="Moves:">
            <font>
                <Font name="Book Antiqua" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="numberOfMovesField" prefHeight="26.0" prefWidth="60.0">
         <font>
            <Font name="Book Antiqua" size="14.0" />
         </font></TextField>
        <Button fx:id="quitButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#quitGame" prefHeight="26.0" prefWidth="76.0" text="Give Up">
            <font>
                <Font name="Book Antiqua" size="14.0" />
            </font>
        </Button>
    </HBox>
    <HBox alignment="CENTER" prefHeight="91.0" prefWidth="500.0" spacing="10.0">
        <padding>
            <Insets top="10.0" />
        </padding>
        <Button fx:id="closeGameButton" onAction="#closeGame" prefHeight="26.0" prefWidth="110.0" text="Close Game" visible="false">
            <font>
                <Font name="Book Antiqua" size="14.0" />
            </font>
        </Button>
        <Button fx:id="goToScoreboardButton" onAction="#goToScoreboard" prefHeight="28.0" prefWidth="159.0" text="Go to Scoreboard" visible="false">
            <font>
                <Font name="Book Antiqua" size="14.0" />
            </font>
        </Button>
    </HBox>
</VBox>
