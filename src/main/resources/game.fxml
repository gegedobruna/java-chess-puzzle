<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="650.0" prefWidth="500.0" stylesheets="@/game.css" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="chesspuzzle.game.GameController">
    <children>
        <Label alignment="CENTER" prefHeight="80.0" prefWidth="460.0" text="Chess Puzzle" textAlignment="CENTER">
            <font>
                <Font name="Book Antiqua Bold" size="41.0"/>
            </font>
        </Label>
        <HBox alignment="TOP_CENTER" prefHeight="59.0" prefWidth="460.0" spacing="10.0">
            <children>
                <Label alignment="TOP_CENTER" prefHeight="72.0" prefWidth="68.0" text="Player name:"/>
                <Label fx:id="nameLabel" alignment="TOP_CENTER" contentDisplay="TOP" prefHeight="22.0"
                       prefWidth="48.0"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="518.0" prefWidth="448.0" spacing="10.0">
            <children>
                <GridPane fx:id="grid" alignment="CENTER" gridLinesVisible="true" maxHeight="-Infinity"
                          maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
                          prefWidth="400.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </VBox.margin>
                    <children>
                        <Label alignment="BOTTOM_RIGHT" prefHeight="64.0" prefWidth="64.0" text="a " GridPane.rowIndex="7"/>
                        <Label alignment="BOTTOM_RIGHT" prefHeight="64.0" prefWidth="64.0" text="b " GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                        <Label alignment="BOTTOM_RIGHT" prefHeight="64.0" prefWidth="64.0" text="c " GridPane.columnIndex="2" GridPane.rowIndex="7"/>
                        <Label alignment="BOTTOM_RIGHT" prefHeight="64.0" prefWidth="64.0" text="d " GridPane.columnIndex="3" GridPane.rowIndex="7"/>
                        <Label alignment="BOTTOM_RIGHT" prefHeight="64.0" prefWidth="64.0" text="e " GridPane.columnIndex="4" GridPane.rowIndex="7"/>
                        <Label alignment="BOTTOM_RIGHT" prefHeight="64.0" prefWidth="64.0" text="f " GridPane.columnIndex="5" GridPane.rowIndex="7"/>
                        <Label alignment="BOTTOM_RIGHT" prefHeight="64.0" prefWidth="64.0" text="g " GridPane.columnIndex="6" GridPane.rowIndex="7"/>
                        <Label alignment="BOTTOM_RIGHT" prefHeight="64.0" prefWidth="64.0" text="h " GridPane.columnIndex="7" GridPane.rowIndex="7"/>
                        <Label alignment="TOP_LEFT" prefHeight="64.0" prefWidth="64.0" text=" 2" GridPane.rowIndex="6"/>
                        <Label alignment="TOP_LEFT" prefHeight="64.0" prefWidth="64.0" text=" 1" GridPane.rowIndex="7"/>
                        <Label alignment="TOP_LEFT" prefHeight="64.0" prefWidth="64.0" text=" 3" GridPane.rowIndex="5"/>
                        <Label alignment="TOP_LEFT" prefHeight="64.0" prefWidth="64.0" text=" 4" GridPane.rowIndex="4"/>
                        <Label alignment="TOP_LEFT" prefHeight="64.0" prefWidth="64.0" text=" 5" GridPane.rowIndex="3"/>
                        <Label alignment="TOP_LEFT" prefHeight="64.0" prefWidth="64.0" text=" 6" GridPane.rowIndex="2"/>
                        <Label alignment="TOP_LEFT" prefHeight="64.0" prefWidth="64.0" text=" 7" GridPane.rowIndex="1"/>
                        <Label alignment="TOP_LEFT" prefHeight="64.0" prefWidth="64.0" text=" 8"/>
                    </children>
                </GridPane>
            </children>
        </HBox>
        <HBox alignment="BOTTOM_CENTER" prefHeight="72.0" prefWidth="460.0" spacing="10.0">
            <children>
                <Label text="Moves:"/>
                <TextField fx:id="numberOfMovesField" prefHeight="26.0" prefWidth="60.0"/>
                <Button fx:id="quitButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                        minWidth="-Infinity" onAction="#quitGame" prefHeight="26.0" prefWidth="60.0" text="Give Up"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="91.0" prefWidth="500.0" spacing="10.0">
            <children>
                <Button fx:id="closeGameButton" onAction="#closeGame" prefHeight="26.0" prefWidth="100.0"
                        text="Close Game" visible="false"/>
                <Button fx:id="goToScoreboardButton" onAction="#goToScoreboard" text="Go to Scoreboard"
                        visible="false"/>
            </children>
            <padding>
                <Insets top="10.0"/>
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
